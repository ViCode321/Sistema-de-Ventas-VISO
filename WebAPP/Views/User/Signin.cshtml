@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Login </title>

    <link rel="shortcut icon" type="image/x-icon" href="~/img/icons/viso1_1.png">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="~/css/style.css">
</head>

<body class="account-page">

    <div class="main-wrapper">
        <div class="account-content">
            <div class="login-wrapper">               
                <div class="login-content">                    
                    <div class="login-userset">
                        <form asp-controller="User" asp-action="Signin" method="post">
                            <div class="login-logo">
                                <img src="~/img/icons/viso1.jpeg" alt="img">
                            </div>
                            <div class="login-userheading">
                                <h3>Acceder</h3>
                                <!--<h4>Please login to your account</h4>-->
                            </div>
                            <div class="form-login">
                                <label>Nombre de usuario</label>
                                <div class="form-addons">
                                    <input name="username" type="text" placeholder="Ingresa tu nombre de usuario">
                                    <img src="~/img/icons/users1.svg" alt="img">
                                </div>
                            </div>
                            <div class="form-login">
                                <label>Contraseña</label>
                                <div class="pass-group">
                                    <input name="key" type="password" class="pass-input" placeholder="Ingresa tu contraseña">
                                    <span class="fas toggle-password fa-eye-slash"></span>
                                </div>
                            </div>
                            <!--<div class="form-login">
                                <div class="alreadyuser">
                                    <h4><a href="#" class="hover-a">¿Olvidaste tu contraseña?</a></h4>
                                </div>
                            </div>-->
                            <div class="form-login">
                                <button class="btn btn-login" type="submit">Acceder</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>Alerta! </strong>@ViewData["Mensaje"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                </div>
                            }
                        </form>
                    </div>
                </div>
                <div class="login-img">
                    <img src="~/img/icons/papeleria.jpg" alt="img">
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/jquery-3.6.0.min.js"></script>

    <script src="~/js/feather.min.js"></script>

    <script src="~/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/script.js"></script>
</body>

</html>