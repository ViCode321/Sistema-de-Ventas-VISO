@model project_DBA_VISO.Models.Views.ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="POS - Bootstrap Admin Template">
    <meta name="keywords"
          content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern,  html5, responsive">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>¡Error!</title>

    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.jpg">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/animate.css">

    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css">

    <link rel="stylesheet" href="~/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="~/css/style.css">
</head>

<body class="error-page">
    <div id="global-loader">
        <div class="whirly-loader"> </div>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="main-wrapper">
            <div class="error-box">
                <h1>Error</h1>
                <h1>@Model.StatusCode</h1>
                @if (Model.StatusCode == 404)
                {
                    <h3 class="h2 mb-3"><i class="fas fa-exclamation-circle"></i> ¡Ups! ¡Página no encontrada!</h3>
                    <p class="h4 font-weight-normal">La página de tu solicitud no fue encontrada.</p>
                }
                else if (Model.StatusCode == 500)
                {
                    <h3 class="h2 mb-3"><i class="fas fa-exclamation-circle"></i> ¡Ups! Error interno del servidor</h3>
                    <p class="h4 font-weight-normal">Hubo algún error en el servidor.</p>
                }
                else
                {
                    <h3 class="h2 mb-3"><i class="fas fa-exclamation-circle"></i></h3>
                }
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">De vuelta a casa</a>
            </div>
        </div>
    }

    <script src="~/js/jquery-3.6.0.min.js"></script>

    <script src="~/js/feather.min.js"></script>

    <script src="~/js/jquery.slimscroll.min.js"></script>

    <script src="~/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/script.js"></script>
</body>

</html>